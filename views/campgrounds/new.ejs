<% include ../partials/header %>

    <div class="container text-center">      
        <div class="row">
            <h1>Create a New Campground</h1>            
            <div style="width: 30%; margin: 25px auto;">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Name" name="campground[name]" required autocomplete="off" spellcheck="false">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="campground[price]" placeholder="Price" min="0.10" step="0.10" required autocomplete="off" spellcheck="false">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Image URL" name="campground[image]" required autocomplete="off" spellcheck="false">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="campground[description]" cols="50" rows="10" placeholder="Description" autocomplete="off" spellcheck="false"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>  
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>         
        </div>
    </div>
    
<% include ../partials/footer %>