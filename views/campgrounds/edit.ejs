<% include ../partials/header %>

    <div class="container text-center">
        <div class="row">
            <h1>Edit <%= campground.name %></h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= campground.name %>" name="campground[name]" required autocomplete="off" spellcheck="false">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0.10" step="0.10" required autocomplete="off" spellcheck="false">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]" required autocomplete="off" spellcheck="false">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="campground[description]" cols="50" rows="10" autocomplete="off" spellcheck="false"><%= campground.description %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>  
                </form>
                <a href="/campgrounds/<%= campground._id %>">Go Back</a>
            </div>   
        </div>
    </div>

<% include ../partials/footer %>